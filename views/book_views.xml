<odoo>
    <record id="view_tree_book" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list string="Books List">
                <field name="name"/>
                <field name="author"/>
                <field name="is_available"/>
            </list>
        </field>
    </record>

    <record id="view_form_book" model="ir.ui.view">
    <field name="name">library.book.form</field>
    <field name="model">library.book</field>
    <field name="arch" type="xml">
        <form string="Book">
            <sheet>
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name" placeholder="Book Title..."/>
                    </h1>
                </div>

                <group>
                    <group>
                        <field name="author"/>
                        <field name="publisher_id"/>
                    </group>
                    <group>
                        <field name="isbn"/>
                        <field name="published_date"/>
                        <field name="is_available"/>
                    </group>
                </group>

                <notebook>
                    <page string="Book Details">
                        <field name="summary"/>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>


    <record id="view_kanban_book" model="ir.ui.view">
        <field name="name">library.book.kanban</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="author"/>
                <field name="is_available"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="Book Cover" t-att-src="kanban_image('library.book', 'image_128', record.id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><t t-esc="record.name.value"/></strong>
                                
                                <br/>
                                
                                <t t-if="record.author.raw_value">
                                    <span class="text-muted"><t t-esc="record.author.value"/></span>
                                </t>
                                
                                <br/>
                                
                                <div t-att-class="record.is_available.raw_value ? 'text-success' : 'text-danger'">
                                    <t t-if="record.is_available.raw_value">
                                        <span>Available</span>
                                    </t>
                                    <t t-else="">
                                        <span>On Loan</span>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_kanban_books" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
</odoo>