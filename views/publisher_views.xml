<odoo>
    <record id="view_tree_publisher" model="ir.ui.view">
        <field name="name">library.publisher.tree</field>
        <field name="model">library.publisher</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="books_count"/>
            </list>
        </field>
    </record>

    <record id="view_form_publisher" model="ir.ui.view">
        <field name="name">library.publisher.form</field>
        <field name="model">library.publisher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_publishers_list" model="ir.actions.act_window">
        <field name="name">Publishers</field>
        <field name="res_model">library.publisher</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem 
        id="menu_publishers"
        name="Publishers"
        parent="menu_library_root"
        action="action_publishers_list"
        sequence="20"
    />
</odoo>